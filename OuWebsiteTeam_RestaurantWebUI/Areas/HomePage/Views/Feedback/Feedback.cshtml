    Layout = "~/Areas/HomePage/Views/Layout/Layout_Page.cshtml";
}

<!-- Breadcrumb -->
<div class="row page-name">
    <h1>Phản hồi</h1>
    <div class="col-md-6 col-md-offset-3">
