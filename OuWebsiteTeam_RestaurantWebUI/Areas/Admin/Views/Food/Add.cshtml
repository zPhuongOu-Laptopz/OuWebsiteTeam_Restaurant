@model OuWebsiteTeam_RestaurantService.DBContext.PdbFood

@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Layout/Layout.cshtml";
}

<div class="outer">
    <div class="inner bg-light lter">
        <!--BEGIN INPUT TEXT FIELDS-->
        <div class="row">
            <div class="col-lg-9">
                <div class="box dark">
                    <header>
                        <div class="icons">
                            <i class="fa fa-edit"></i>
                        </div>
                        <h5>Thêm món ăn</h5>
                        <!-- .toolbar -->
                        <div class="toolbar">
                            <nav style="padding: 8px;">
                                <a href="javascript:;" class="btn btn-default btn-xs collapse-box">
                                    <i class="fa fa-minus"></i>
                                </a>
                                <a href="javascript:;" class="btn btn-default btn-xs full-box">
                                    <i class="fa fa-expand"></i>
                                </a>
                                <a href="javascript:;" class="btn btn-danger btn-xs close-box">
                                    <i class="fa fa-times"></i>
                                </a>
                            </nav>
                        </div>
                        <!-- /.toolbar -->
                    </header>
                    <div id="div-1" class="body">
                        @using (Html.BeginForm())
                        { @Html.AntiForgeryToken()
                            <div class="form-horizontal">
                                <h4>Thêm món ăn</h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <!-- Name Food -->
                                <div class="form-group">
                                    @Html.LabelFor(model => model.NameFood, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.NameFood, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.NameFood, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <!-- Description -->
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Decriptions, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.TextAreaFor(model => model.Decriptions, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Decriptions, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <!-- Price Big Size -->
                                <div class="form-group">
                                    @Html.LabelFor(model => model.PriceBigSize, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.PriceBigSize, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.PriceBigSize, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <!-- Price Small Size -->
                                <div class="form-group">
                                    @Html.LabelFor(model => model.PriceSmallSize, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.PriceSmallSize, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.PriceSmallSize, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <!-- Percent Discount For Small Size -->
                                <div class="form-group">
                                    @Html.LabelFor(model => model.PercentDiscountForSmallSize, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.PercentDiscountForSmallSize, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.PercentDiscountForSmallSize, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <!-- Percent Discount For Big Size -->
                                <div class="form-group">
                                    @Html.LabelFor(model => model.PercentDiscountForBigSize, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.PercentDiscountForBigSize, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.PercentDiscountForBigSize, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <!-- Is Status-->
                                <div class="form-group">
                                    @Html.LabelFor(model => model.IsStatus, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        <div class="checkbox">
                                            @Html.EditorFor(model => model.IsStatus)
                                            @Html.ValidationMessageFor(model => model.IsStatus, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <!-- Is Allow Order -->
                                <div class="form-group">
                                    @Html.LabelFor(model => model.IsAllowOrder, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        <div class="checkbox">
                                            @Html.EditorFor(model => model.IsAllowOrder)
                                            @Html.ValidationMessageFor(model => model.IsAllowOrder, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <!-- Is Hot -->
                                <div class="form-group">
                                    @Html.LabelFor(model => model.IsHot, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        <div class="checkbox">
                                            @Html.EditorFor(model => model.IsHot)
                                            @Html.ValidationMessageFor(model => model.IsHot, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <!-- Button Add -->
                                <div class="form-group">
                                    <div class="col-md-offset-4 col-md-8">
                                        <input type="submit" value="Create" class="btn btn-default" />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
        <!--END TEXT INPUT FIELD-->
    </div>
    <!-- /.inner -->
</div>
<!-- /.outer -->
