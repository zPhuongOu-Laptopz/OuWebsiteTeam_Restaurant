
@{
    ViewBag.Title = "Test";
    Layout = "~/Areas/Admin/Views/Layout/Layout.cshtml";
}

<div class="outer">
    <div class="inner bg-light lter">
        <div class="row">
            <div class="col-lg-12">
                <div class="box">
                    <header>
                        <h5>Thêm tài khoản</h5>
                    </header>
                    <div id="div-2" class="body">
                        <div class="col-md-6">
                            <form id="wizardForm" method="post" action="" class="form-horizontal wizardForm">
                                <fieldset class="step" id="last">
                                    <div class="clearfix"></div>
                                    <!-- Username -->
                                    <div class="form-group">
                                        <label for="username" class="control-label col-lg-4">Tài khoản</label>
                                        <div class="col-lg-8">
                                            <input type="text" id="username" placeholder="Tên tài khoản" class="form-control">
                                        </div>
                                    </div>
                                    <!-- Password -->
                                    <div class="form-group">
                                        <label for="pass" class="control-label col-lg-4">Mật khẩu</label>
                                        <div class="col-lg-8">
                                            <input type="password" id="pass" placeholder="Password phải gồm số và chữ hoa" class="form-control">
                                        </div>
                                    </div>
                                    <!-- Repassword -->
                                    <div class="form-group">
                                        <label for="pass2" class="control-label col-lg-4">Nhập lại mật khẩu</label>
                                        <div class="col-lg-8">
                                            <input type="password" id="pass2" placeholder="Nhập lại password" class="form-control">
                                        </div>
                                    </div>
                                    <!-- Avatar -->
                                    <div class="form-group">
                                        <label class="control-label col-lg-4">Ảnh đại diện</label>
                                        <div class="col-lg-8">
                                            <div class="fileinput fileinput-new" data-provides="fileinput">
                                                <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 200px; height: 150px;"></div>
                                                <div>
                                                    <span class="btn btn-default btn-file">
                                                        <span class="fileinput-new">Select image</span> <span class="fileinput-exists">Change</span>
                                                        <input type="file" name="...">
                                                    </span>
                                                    <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Order Admin -->
                                    <div class="form-group">
                                        <label class="control-label col-lg-4">Loại tài khoản</label>
                                        <div class="col-lg-8">
                                            <div class="chosen-container chosen-container-single" style="width: 100%;" title="">
                                                <select class="chosen-single chosen-default form-control chzn-select">
                                                    <option>Choose a Country...</option>
                                                    <option value="Admin">Admin</option>
                                                    <option value="Senior">Senior</option>
                                                    <option value="Junior">Junior</option>
                                                    <option value="Staff">Staff</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- EmployeeID -->
                                    <div class="form-group">
                                        <label for="EmployeeID" class="control-label col-lg-4">Cấp cho nhân viên</label>
                                        <div class="col-lg-8">
                                            <div class="chosen-container chosen-container-single" style="width: 100%;" title="">
                                                <select class="chosen-single chosen-default form-control chzn-select">
                                                    <option>Choose a Name...</option>
                                                    <option value="NguyenVanA">Nguyễn Văn A</option>
                                                    <option value="TranThiB">Trần Thị B</option>
                                                    <option value="abc">Lê Trần Bích Thảo</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Button Submit -->
                                    <div class="form-group">
                                        <div class="col-lg-8 col-lg-offset-4">
                                            <input class="btn" type="submit" value="Thêm tài khoản" />
                                        </div>
                                    </div>
                                </fieldset>
                                <div class="form-actions">
                                    <input class="navigation_button btn" id="back" value="Back" type="reset" />
                                    <input class="navigation_button btn btn-primary" id="next" value="Next" type="submit" />
                                </div>
                            </form>
                        </div>

                        <div class="col-md-6">
                            <table class="table table-striped sortableTable responsive-table">
                                <thead>
                                    <tr>
                                        <th>
                                            #
                                            <i class="fa sort"></i>
                                        </th>
                                        <th>
                                            Tên nhân viên
                                            <i class="fa sort"></i>
                                        </th>
                                        <th>
                                            Ngày Sinh
                                            <i class="fa sort"></i>
                                        </th>
                                        <th>
                                            Giới tính
                                            <i class="fa sort"></i>
                                        </th>
                                        <th>
                                            Chức vụ
                                            <i class="fa sort"></i>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>1</td>
                                        <td>Nguyễn Quốc Huy</td>
                                        <td>30/10/96</td>
                                        <td>Nam</td>
                                        <td>Giám đốc</td>
                                    </tr>
                                    <tr>
                                        <td>2</td>
                                        <td>Nguyễn Hoàng Phương</td>
                                        <td>30/10/96</td>
                                        <td>Nam</td>
                                        <td>Bảo vệ</td>
                                    </tr>
                                    <tr>
                                        <td>3</td>
                                        <td>Nguyễn Ngọc Phương</td>
                                        <td>30/10/96</td>
                                        <td>Nam</td>
                                        <td>Lao công</td>
                                    </tr>
                                    <tr>
                                        <td>4</td>
                                        <td>David Beckham</td>
                                        <td>30/10/96</td>
                                        <td>Nam</td>
                                        <td>Giữ xe</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div id="data"></div>
                    </div>
                </div>
            </div><!-- /.col-lg-12 -->
        </div><!-- /.row -->
    </div><!-- /.inner -->
</div><!-- /.outer -->

